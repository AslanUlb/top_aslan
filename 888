#include <iostream>
using namespace std;

void rrr(int *&a, int& n) {
	int* p = new int[5];
	for (int i = 0; i < n; ++i) {
		p[i] = i + 10;
	}
	a = p;
	cout << a[1];

}

int main() {
	int n = 5;
	int *a = new int[n];
	for (int i = 0; i < n; ++i) {
		a[i] = i + 1;
	}
	
	rrr(a, n);
	cout << endl;
	cout << a[1];
	return 0;
}
